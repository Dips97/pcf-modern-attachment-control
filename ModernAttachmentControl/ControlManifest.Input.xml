<?xml version="1.0" encoding="utf-8"?>
<manifest>
       <control namespace="CodeComponents" constructor="ModernAttachmentControl" version="1.2.0" display-name-key="Modern Attachment Control" description-key="A modern, configurable file attachment control for Power Apps with file type restrictions, flexible styling, and structured output." control-type="standard">
              <!-- external-service-usage node declares whether this 3rd party PCF control is using external service or not, if yes, this control will be considered as premium and please also add the external domain it is using.
    If it is not using any external service, please set the enabled="false" and DO NOT add any domain below. The "enabled" will be false by default.
    Example1:
      <external-service-usage enabled="true">
        <domain>www.Microsoft.com</domain>
      </external-service-usage>
    Example2:
      <external-service-usage enabled="false">
      </external-service-usage> -->
              <external-service-usage enabled="false">
                     <!-- UNCOMMENT TO ADD EXTERNAL DOMAINS
      <domain></domain>
      <domain></domain> -->
              </external-service-usage>
              <!-- property node identifies a specific, configurable piece of data that the control expects from CDS -->
              <property name="allowedFileTypes" display-name-key="Allowed File Types" description-key="Comma separated list of allowed file extensions (e.g. pdf,docx)" of-type="SingleLine.Text" usage="bound" />
              <property name="maxFiles" display-name-key="Max Files" description-key="Maximum number of files allowed." of-type="Whole.None" usage="bound" />
              <property name="maxFileSizeMB" display-name-key="Max File Size (MB)" description-key="Maximum file size allowed per file (in MB)." of-type="Decimal" usage="bound" />
              <property name="buttonLabel" display-name-key="Button Label" description-key="Text for the upload button." of-type="SingleLine.Text" usage="bound" />
              <property name="attachedFiles" display-name-key="Attached Files" description-key="Attached files output as a table." of-type="Object" usage="output" />
              <property name="attachedFilesSchema" display-name-key="Attached Files Schema" of-type="SingleLine.Text" usage="bound" hidden="true" />
              <property-dependencies>
                     <property-dependency input="attachedFilesSchema" output="attachedFiles" required-for="schema" />
              </property-dependencies>
              <property name="buttonFillColor" display-name-key="Button Fill Color" description-key="Fill color for the upload button" of-type="SingleLine.Text" usage="bound" />
              <property name="buttonFontColor" display-name-key="Button Font Color" description-key="Font color for the upload button" of-type="SingleLine.Text" usage="bound" />
              <property name="buttonBorderColor" display-name-key="Button Border Color" description-key="Border color for the upload button" of-type="SingleLine.Text" usage="bound" />
              <property name="buttonSize" display-name-key="Button Size" description-key="Button size (Small, Medium, Large)" of-type="Enum" usage="bound">
                     <value name="Small" display-name-key="Small">Small</value>
                     <value name="Medium" display-name-key="Medium">Medium</value>
                     <value name="Large" display-name-key="Large">Large</value>
              </property>
              <property name="buttonVerticalAlign" display-name-key="Button Vertical Align" description-key="Button vertical position (Top, Bottom)" of-type="Enum" usage="bound">
                     <value name="Top" display-name-key="Top">Top</value>
                     <value name="Bottom" display-name-key="Bottom">Bottom</value>
              </property>
              <property name="buttonHorizontalAlign" display-name-key="Button Horizontal Align" description-key="Button horizontal alignment (Left, Center, Right, Justify)" of-type="Enum" usage="bound">
                     <value name="Left" display-name-key="Left">Left</value>
                     <value name="Center" display-name-key="Center">Center</value>
                     <value name="Right" display-name-key="Right">Right</value>
                     <value name="Justify" display-name-key="Justify">Justify</value>
              </property>
              <property name="removeIconColor" display-name-key="Remove Icon Color" description-key="Color for the remove icon" of-type="SingleLine.Text" usage="bound" />
              <property name="buttonIconName" display-name-key="Button Icon Name" description-key="Fluent UI icon name for upload button" of-type="SingleLine.Text" usage="bound" />
              <property name="showFileInfoList" display-name-key="Show File Info List" description-key="Show/hide the file info list" of-type="Enum" usage="bound">
                     <value name="Show" display-name-key="Show">Show</value>
                     <value name="Hide" display-name-key="Hide">Hide</value>
              </property>
              <property name="buttonTooltip" display-name-key="Tooltip" description-key="Tooltip for the upload button" of-type="SingleLine.Text" usage="bound" />
              <property name="disabledFillColor" display-name-key="Disabled Fill Color" description-key="Fill color for button when disabled" of-type="SingleLine.Text" usage="bound" />
              <property name="disabledFontColor" display-name-key="Disabled Font Color" description-key="Font color for button when disabled" of-type="SingleLine.Text" usage="bound" />
              <property name="borderStyle" display-name-key="Border Style" description-key="Border style: Solid, Dashed, Dotted, None" of-type="Enum" usage="bound">
                     <value name="Solid" display-name-key="Solid">Solid</value>
                     <value name="Dashed" display-name-key="Dashed">Dashed</value>
                     <value name="Dotted" display-name-key="Dotted">Dotted</value>
                     <value name="None" display-name-key="None">None</value>
              </property>
              <property name="borderThickness" display-name-key="Border Thickness" description-key="Border thickness in pixels" of-type="Whole.None" usage="bound" />
              <property name="borderColor" display-name-key="Border Color" description-key="Border color" of-type="SingleLine.Text" usage="bound" />
              <property name="reset" display-name-key="Reset" description-key="Reset the control" of-type="TwoOptions" usage="bound" />
              <property name="buttonBorderRadius" display-name-key="Button Border Radius" description-key="Button Border radius in pixels" of-type="Whole.None" usage="bound" />
              <property name="errorMessage" display-name-key="Error Message" description-key="The last validation error message" of-type="SingleLine.Text" usage="output" />
              <property name="showErrorMessage" display-name-key="ShowErrorMessage" description-key="Show or hide the inline error under the button" of-type="TwoOptions" usage="bound">
                     <value name="true" display-name-key="True">True</value>
                     <value name="false" display-name-key="False">False</value>
              </property>
              <event name="OnError" display-name-key="OnError" description-key="OnError Event to trigger Error Actions" />

              <!-- Property node's of-type attribute can be of-type-group attribute.
      Example:
      <type-group name="numbers">
        <type>Whole.None</type>
        <type>Currency</type>
        <type>FP</type>
        <type>Decimal</type>
      </type-group>
      <property name="sampleProperty" display-name-key="Property_Display_Key" description-key="Property_Desc_Key" of-type-group="numbers" usage="bound" required="true" /> -->
              <resources>
                     <code path="index.ts" order="1" />
                     <!-- <resx path="strings/ModernAttachmentControl.1033.resx" version="1.0.0" /> -->
                     <!-- UNCOMMENT TO ADD MORE RESOURCES
      <css path="css/AttachFiles.css" order="1" />
      <resx path="strings/AttachFiles.1033.resx" version="1.0.0" /> -->
              </resources>
              <!-- UNCOMMENT TO ENABLE THE SPECIFIED API
    <feature-usage>
      <uses-feature name="Device.captureAudio" required="true" />
      <uses-feature name="Device.captureImage" required="true" />
      <uses-feature name="Device.captureVideo" required="true" />
      <uses-feature name="Device.getBarcodeValue" required="true" />
      <uses-feature name="Device.getCurrentPosition" required="true" />
      <uses-feature name="Device.pickFile" required="true" />
      <uses-feature name="Utility" required="true" />
      <uses-feature name="WebAPI" required="true" />
    </feature-usage> -->
       </control>
</manifest>